<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed!"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="95dp"/>

    <TableLayout
        android:id="@+id/TableLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text01"
        android:stretchColumns="1">

        <TableRow>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/check_icon" />

            <TextView
                android:id="@+id/compleTask_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="task11111111111"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/check_icon" />

            <TextView
                android:id="@+id/compleTask_2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="tasktasktasktask"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/check_icon" />

            <TextView
                android:id="@+id/compleTask_3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Relax youself!"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">


        <Button
            android:id="@+id/btn_finish"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_roundcorner"
            android:text="Finish"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_again"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_roundcorner"
            android:text="again"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:textSize="15dp" />



    </LinearLayout>


</RelativeLayout>